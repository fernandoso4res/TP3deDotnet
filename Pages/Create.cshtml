@page
@model Create

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Inclusão de Serviço</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Servico.Nome" class="control-label"></label>
                <input asp-for="Servico.Nome" class="form-control"/>
                <span asp-validation-for="Servico.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Servico.Descricao" class="control-label"></label>
                <input asp-for="Servico.Descricao" class="form-control"/>
                <span asp-validation-for="Servico.Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Servico.ImagemUri" class="control-label"></label>
                <input asp-for="Servico.ImagemUri" class="form-control"/>
                <span asp-validation-for="Servico.ImagemUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Servico.Preco" class="control-label"></label>
                <input asp-for="Servico.Preco" class="form-control"/>
                <span asp-validation-for="Servico.Preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Servico.DataCadastro" class="control-label"></label>
                <input asp-for="Servico.DataCadastro" class="form-control"/>
                <span asp-validation-for="Servico.DataCadastro" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Servico.JardineiroProfissional"/>
                <label asp-for="Servico.JardineiroProfissional"></label>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}